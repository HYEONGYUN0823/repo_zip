	<insert id="insert">
		INSERT INTO codeGroup (
			seq,
			name,
			gender,
			btd,
			email,
			passWord,
			delNy,
			mobileCarrier
		) values (
			#{seq},
			#{name},
			#{gender},
			#{btd},
			#{email},
			#{passWord},
			#{delNy},
			#{mobileCarrier}
		)
	</insert>
	
	<update id="update">
		UPDATE userUi SET
			name = #{name},
			gender = #{gender},
			btd = #{btd},
			email = #{email},
			passWord = #{passWord},
			delNy = #{delNy},
			mobileCarrier = #{mobileCarrier}
		WHERE seq = #{seq}
	</update>


